
# EirosShell Configuration Template
# Rename this file to .env to use these settings

# Debug mode (true/false)
DEBUG_MODE=false

# Browser options (chromium, firefox, webkit)
BROWSER=chromium

# Browser headless mode (true/false)
HEADLESS=false

# Login credentials (optional, leave empty for manual login)
OPENAI_EMAIL=
OPENAI_PASSWORD=

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Auto-reconnect on disconnection (true/false)
AUTO_RECONNECT=true

# Screenshot directory
SCREENSHOT_DIR=~/EirosShell/screenshots

# Pattern storage directory
PATTERN_DIR=~/EirosShell/patterns

# Log directory
LOG_DIR=~/EirosShell/logs

